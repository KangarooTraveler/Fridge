<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:clipToPadding="false"
    android:padding="24sp"
    android:id="@+id/rowProduct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:id="@+id/RelativeCustomRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">

    <ImageView
        android:id="@+id/imgFProducts"
        android:src="@drawable/ic__info_f"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:visibility="visible"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
    />

    <TextView
        android:id="@+id/zProd_txt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:text="Zagolovok"
        android:textSize="18sp"
        android:textStyle="bold"
       android:layout_alignParentTop="true" />
        
        <TextView
            android:id="@+id/DatePF"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/date/ddmmyy"
            android:layout_marginTop="30dp"
            android:layout_marginStart="60dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/CountD"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="days"
            android:visibility="visible"
            android:layout_marginTop="49dp"
            android:layout_marginStart="60dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/kolvoP"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="6dp"
        android:textSize="18sp"
        android:textAlignment="textEnd"
        android:layout_marginTop="10dp"
        android:text="Kolichestvo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>