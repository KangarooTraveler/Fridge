<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.update.UpdateFragmentProducts"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/LayoutGr286"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <RelativeLayout
            android:id="@+id/RelativeAdd51"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/DeleteButtonDate1"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/custom_button"
                android:textSize="12dp"
                android:textAllCaps="false"
                android:layout_marginStart="260dp"
                android:layout_marginEnd="5dp"
                android:text="Удалить"
                android:layout_marginTop="80dp"
                />

            <Button
                android:id="@+id/BackButton1"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/custom_button"
                android:textSize="12dp"
                android:textAllCaps="false"
                android:layout_marginEnd = "260dp"
                android:text="Назад"
                android:layout_marginTop="80dp"
                />

        </RelativeLayout>
    </LinearLayout>



    <EditText
        android:id="@+id/update_ProductName"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:ems="2"
        android:paddingStart="8dp"
        android:paddingEnd="2dp"
        android:paddingTop="2dp"
        android:background="@drawable/custom_edit"
        android:hint="Продукт"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LayoutGr286" />

    <TextView
        android:id="@+id/CountTextProd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Количество выборанного продукта: "
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:layout_marginEnd="55dp"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/update_ProductName"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/updateProductNumber"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="2dp"
        android:background="@drawable/custom_edit"
        android:ems="2"
        android:text="0"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@id/update_ProductName"
        />


    <TextView
        android:id="@+id/CountTextProd3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Срок годности: "
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:layout_marginEnd="205dp"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:paddingStart="5dp"
        app:layout_constraintEnd_toStartOf="@id/updateTextNumber2"
        app:layout_constraintTop_toBottomOf="@id/updateProductNumber"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/updateTextNumber2"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="2dp"
        android:background="@drawable/custom_edit"
        android:ems="2"
        android:text="0"
        android:visibility="gone"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@id/updateProductNumber"
        />



    <LinearLayout
        android:id="@+id/LayoutGr2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateTextNumber2">

        <RelativeLayout
            android:id="@+id/RelativeAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/UpdateDataTextProd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Дата изготовления: "
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                />

            <Button
                android:id="@+id/UpdateButtonDate"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/custom_button"
                android:textSize="12dp"
                android:textAllCaps="false"
                android:text="Обновить дату"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                />

        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/UpdateIdProd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="28dp"
        android:text="Обновить"
        android:background="@drawable/custom_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>